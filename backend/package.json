{
  "name": "links2go-backend",
  "version": "1.0.0",
  "description": "Backend API for Links2Go URL shortener",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check src/"
  },
  "keywords": [
    "url-shortener",
    "api",
    "redis",
    "typescript",
    "express"
  ],
  "author": "malagant",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "redis": "^5.6.1",
    "zod": "^4.0.10",
    "prom-client": "^15.1.0",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "express-rate-limit": "^8.0.1",
    "nanoid": "^5.0.4",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/cors": "^2.8.17",
    "@types/qrcode": "^1.5.5",
    "@types/node": "^20.11.16",
    "@biomejs/biome": "^1.5.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2",
    "@vitest/coverage-v8": "^1.2.2"
  }
}
