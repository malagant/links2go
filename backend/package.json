{
  "name": "links2go-backend",
  "version": "1.0.0",
  "description": "Backend API for Links2Go URL shortener",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check src/"
  },
  "keywords": [
    "url-shortener",
    "api",
    "redis",
    "typescript",
    "express"
  ],
  "author": "malagant",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "redis": "^4.6.13",
    "zod": "^3.22.4",
    "prom-client": "^15.1.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "nanoid": "^5.0.4",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/qrcode": "^1.5.5",
    "@types/node": "^24.3.0",
    "@biomejs/biome": "^2.2.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4"
  }
}
